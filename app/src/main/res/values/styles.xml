<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="basic_button_text">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>

    </style>
    <style name="basicText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>

    </style>


    <style name="big_text" parent="basicText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.07</item>

    </style>

    <style name="large_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="service_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="small_service_text">

        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="edit">
        <item name="android:textSize">26sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="button_basic">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_standard</item>
        <item name="android:background">@drawable/button_basic_background</item>
    </style>

    <style name="button_auxiliary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_auxiliary_background</item>
    </style>

    <style name="button_login_register">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_standard</item>
        <item name="android:background">@drawable/button_login_and_register</item>
    </style>

    <style name="button_google">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_auxiliary</item>
        <item name="android:background">@drawable/background_google_button</item>
    </style>





</resources>