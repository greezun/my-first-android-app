<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>


    <style name="Text.Primary.LabelLarge">
        <item name="android:textSize">@dimen/textLabelLargeSize</item>
    </style>



    <style name="Text.Secondary">
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="Text.Secondary.ServiceText">
        <item name="android:textSize">@dimen/textServiceNormalSize</item>
    </style>

    <style name="Text.Secondary.SmallServiceText">
        <item name="android:textSize">@dimen/textServiceSmallSize</item>
    </style>

    <style name="Text.Primary.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="Text.Secondary.LabelLarge" parent="TextAppearance.Material3.LabelLarge" />

    <style name="Text.Primary.ButtonText">
        <item name="android:textSize">@dimen/textButtonSize</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="CheckBox" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Secondary.ServiceText</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputEditLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/outline_custom_color</item>
        <item name="android:textColorHint">@color/outline_custom_color</item>
        <item name="expandedHintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextTextColor">@color/error_text_color</item>
<!--        <item name="boxCollapsedPaddingTop">4dp</item>-->
    </style>

    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/Text.Secondary.LabelLarge</item>
        <item name="android:textSize">@dimen/textLabelLargeSize</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>

    </style>


    <style name="edit">
        <item name="android:textSize">26sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="button_basic">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_standard</item>
        <item name="android:background">@drawable/button_basic_background</item>
    </style>

    <style name="button_auxiliary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_auxiliary</item>
        <item name="android:background">@drawable/button_auxiliary</item>
    </style>

    <style name="button_auxiliary_night">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_auxiliary</item>
        <item name="android:background">@drawable/button_auxiliary_night</item>
    </style>

    <style name="button_login_register">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_standard</item>
        <item name="android:background">@drawable/button_login_and_register</item>
        <item name="android:textAppearance">@style/Text.Primary.ButtonText</item>
        <item name="android:letterSpacing">0.09</item>
    </style>

    <style name="button_google">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height_auxiliary</item>
        <item name="android:background">@drawable/background_google_button</item>
    </style>




</resources>