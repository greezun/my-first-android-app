<?xml version="1.0" encoding="utf-8"?>
<!--TODO розмітка макету може сповзати, в залежності від dpi екрану-->
<!--TODO я б елементи розміщав по порядку їх появи на екрані, зліва на право, зверху вниз-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background_color"
    tools:context=".AuthActivity">

<!--    TODO text має бути register, бо це екран sign up (у екрану log in нема google кнопки)(done)-->
<!--    TODO onClick, можливо, краще замінити на onClickListener у коді activity(done)-->
<!--    TODO можливо, стиль шрифту теж semi_bold, а не regular-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        style="@style/button_login_register"
        android:layout_marginStart="@dimen/margin_mid"
        android:layout_marginEnd="@dimen/margin_mid"
        android:layout_marginBottom="@dimen/margin_mid"
        android:onClick="onClickListener"
        android:text="@string/register"
        app:layout_constraintBottom_toTopOf="@id/invitationToRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:ignore="UsingOnClickInXml,TextSizeCheck,VisualLintButtonSize" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/invitationToRegister"
        style="@style/TextView"
        android:layout_marginBottom="@dimen/margin_min"
        android:text="@string/invitationToRegister"
        android:textAppearance="@style/Text.Secondary.SmallServiceText"
        app:layout_constraintBottom_toTopOf="@id/enter_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_have_account"
        android:textAppearance="@style/Text.Secondary.ServiceText"
        tools:ignore="MissingConstraints,VisualLintOverlap">
    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/sign_in"
        android:textAppearance="@style/Text.Secondary.ServiceText"
        android:textColor="@color/clickable_text_color"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,VisualLintOverlap"
        >

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/enter_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_mid"
        android:layout_marginBottom="@dimen/margin_mid"
        app:constraint_referenced_ids="have_account, signIn"
        app:flow_horizontalGap="@dimen/margin_mid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >

    </androidx.constraintlayout.helper.widget.Flow>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_google"
        style="@style/button_google"
        android:layout_marginStart="@dimen/margin_mid"
        android:layout_marginEnd="@dimen/margin_mid"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/or"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck,VisualLintButtonSize">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/or"
        style="@style/TextView"
        android:layout_marginBottom="8dp"
        android:text="@string/or"
        android:textAppearance="@style/Text.Primary.HeadlineSmall"
        app:layout_constraintBottom_toTopOf="@id/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.appcompat.widget.AppCompatTextView>

<!--    TODO згідно дизайну, підказка має бути завжди зверху-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordContainer"
        style="@style/TextInputEditLayout"

        android:hint="@string/password"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/outline_custom_color"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordField"
            style="@style/TextInputEditText"
            android:layout_marginStart="@dimen/margin_mid"
            android:layout_marginEnd="@dimen/margin_mid"
            android:background="@color/primary_background_color"
            android:inputType="textPassword"
            android:maxLength="@integer/passwordLength"
            tools:ignore="VisualLintTextFieldSize,TextSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>


<!--    TODO згідно дизайну, підказка має бути завжди зверху-->
<!--    TODO Не виконано умову "Впевніться, що при зміні теми (через шторку) не скидається інпут імейла і пароля"-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/eMailContainer"
        style="@style/TextInputEditLayout"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/eMailField"
            style="@style/TextInputEditText"
            android:background="@color/primary_background_color"
            android:hint="@string/e_mail"
            android:layout_marginStart="@dimen/margin_mid"
            android:layout_marginEnd="@dimen/margin_mid"
            app:expandedHintEnabled = "false"
            android:inputType="textEmailAddress"
            tools:ignore="VisualLintTextFieldSize,TextSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/field_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="eMailContainer, passwordContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fill_profile">

    </androidx.constraintlayout.helper.widget.Flow>

<!--    TODO зображення checkbox не по дизайну-->
    <CheckBox
        android:id="@+id/checkBox"
        style="@style/CheckBox"
        android:checked="false"
        android:layout_marginStart="@dimen/margin_min"
        android:text="@string/remember_me"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordContainer">

    </CheckBox>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fill_profile"
        style="@style/TextView"
        android:layout_marginTop="@dimen/margin_min"
        android:text="@string/fill_profile"
        android:textAppearance="@style/Text.Secondary.ServiceText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/acquaintance">

    </androidx.appcompat.widget.AppCompatTextView>

<!--    TODO текст дуже високо, у порівнянні з дизайном-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/acquaintance"
        style="@style/TextView"
        android:layout_marginTop="146dp"
        android:text="@string/acquaintance"
        android:textAppearance="@style/Text.Primary.HeadlineSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.AppCompatTextView>

</androidx.constraintlayout.widget.ConstraintLayout>